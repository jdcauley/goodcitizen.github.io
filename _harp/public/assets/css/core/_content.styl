// -------------------------------------
//   Headings
// -------------------------------------

h1, h2, h3,
h4, h5, h6
  font-family: header-font-stack
  font-weight: header-font-weight

h1, .h1
  margin: 0 0 1rem
  rem(40px)

h2, .h2
  margin: 1rem 0 2rem
  rem(35px)
  font-weight: 700

h3, .h3
  rem(30px)
  font-weight: 700

h4, .h4
  rem(25px)

h5, .h5
  rem(20px)

h6, .h6
  rem(16px)

// -------------------------------------
//   Utilities
// -------------------------------------

.chromeframe
  margin: 0
  padding: 15px 0
  text-align: center
  background: #f0ad4e
  a
    color: #fff
    text-decoration: underline
    &:hover
      color: black