// *************************************
//
//   Layout
//   -> Margin, Padding, Sizing
//
// *************************************

// -------------------------------------
//   Base
// -------------------------------------

html, body
  height: 100% // needed for mast to be 100% height

// -------------------------------------
//   Grid
// -------------------------------------

.container
  margin: 0 auto
  width: 90%
  max-width: 1200px

.row
  overflow: hidden // clearfix

.column
  + .column
    margin-top: 0.5em
  @media screen and (min-width: 52.5em)
    margin-left: 5%
    float: left
    + .column { margin-top: 0 }
    &:first-child { margin-left: 0 }
    &.full { width: 100% }
    &.half { width: 47.5% }
    &.two-thirds { width: 65% }
    &.one-third { width: 30% }
    &.one-fourth { width: 21.25% }
    &.three-fourths { width: 73.75% }
    &.full-narrow
      margin-left: 17.5% !important
      width: 65%
    &.flow-opposite { float: right }

.grid
  .row
    margin-top: 1.5em
    &:first-child
      margin-top: 0
  .column
    padding: 2em
    font-size: 1.2rem
    background-color: #ccc

// ----- MQ Variables ----- //
medium = "all and (min-width: 43.75em)"
large = "all and (min-width: 50em)"

// -------------------------------------
//   Mast
// -------------------------------------

.mast
  padding: 15px
  width: 100%
  position: fixed
  top: 0
  background: url(/assets/img/bg-ocean.jpg)
  z-index: 100
  .logo
    width: 150px
    display: block
    border: none
  .nav-primary,
  .btn-coffee
    display: none
  @media medium
    padding: 20px
    width: 35%
    height: 100%
    right: 0
    .logo
      width: 260px
      opacity: 0
      transition: opacity .3s ease-in-out
      .js-peekaboo&
        opacity: 1

// -------------------------------------
//   Main
// -------------------------------------

.main
  margin-top: 80px
  padding: 20px
  height: 100%
  @media medium
    margin-top: 0
    padding: 50px
    width: 65%
    top: 0

.hero
  .hero-logo
    display: none
  .hero-title
    margin: 0 0 2rem
    max-width: 43.75rem
    rem(35px)
    line-height: 1.2
    letter-spacing: -.06rem
  .hero-tagline
    max-width: 31rem
    font-family: monospace
    rem(18px)
  @media medium
    .hero-logo
      margin-bottom: 30px
      width: 260px
      display: block
    .hero-title
      rem(70px)

// -------------------------------------
//   Utilities
// -------------------------------------

$l-block, .l-block
  display: block

$l-condense, .l-condense
  margin-bottom: rem(base-whitespace / 2)

$l-pullLeft, .l-pullLeft
  float: left

$l-pullRight, .l-pullRight
  float: right

$l-space, .l-space
  margin-bottom: rem(base-whitespace)

$l-xspace, .l-xspace
  margin-bottom: rem(base-whitespace * 2)

