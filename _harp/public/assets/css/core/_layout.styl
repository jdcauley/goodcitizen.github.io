// *************************************
//
//   Layout
//   -> Margin, Padding, Sizing
//
// *************************************

// -------------------------------------
//   Base
// -------------------------------------

html, body
  height: 100% // needed for mast to be 100% height

// -------------------------------------
//   Grid
// -------------------------------------

.container
  margin: 0 auto
  width: 90%
  max-width: 1200px

.row
  overflow: hidden // clearfix

.column
  + .column
    margin-top: 0.5em
  @media screen and (min-width: 52.5em)
    margin-left: 5%
    float: left
    + .column { margin-top: 0 }
    &:first-child { margin-left: 0 }
    &.full { width: 100% }
    &.half { width: 47.5% }
    &.two-thirds { width: 65% }
    &.one-third { width: 30% }
    &.one-fourth { width: 21.25% }
    &.three-fourths { width: 73.75% }
    &.full-narrow
      margin-left: 17.5% !important
      width: 65%
    &.flow-opposite { float: right }

.grid
  .row
    margin-top: 1.5em
    &:first-child
      margin-top: 0
  .column
    padding: 2em
    font-size: 1.2rem
    background-color: #ccc

// -------------------------------------
//   Mast
// -------------------------------------

.mast
  width: 35%
  height: 100%
  position: fixed
  top: 0
  right: 0
  background-color: brand-gray-dark

// -------------------------------------
//   Main
// -------------------------------------

.main
  width: 65%
  height: 100%
  background-color: brand-gray-light

// -------------------------------------
//   Utilities
// -------------------------------------

$l-block, .l-block
  display: block

$l-condense, .l-condense
  margin-bottom: rem(base-whitespace / 2)

$l-pullLeft, .l-pullLeft
  float: left

$l-pullRight, .l-pullRight
  float: right

$l-space, .l-space
  margin-bottom: rem(base-whitespace)

$l-xspace, .l-xspace
  margin-bottom: rem(base-whitespace * 2)

