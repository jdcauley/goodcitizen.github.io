// *************************************
//
//   Layout
//   -> Margin, Padding, Sizing
//
// *************************************

// -------------------------------------
//   Base
// -------------------------------------

html, body
  height 100% // needed for mast to be 100% height

// -------------------------------------
//   Grid
// -------------------------------------

// ----- MQ Variables ----- //
medium = "all and (min-width: 43.75em)"
large = "all and (min-width: 75em)"

.container
  margin 0 auto
  width 90%
  max-width 1200px

.row
  overflow hidden // clearfix

.column
  + .column
    margin-top 0.5em
  @media large
    margin-left 5%
    float left
    + .column
      margin-top 0
    &:first-child 
      margin-left 0
    &.full 
      width 100%
    &.half 
      width 47.5%
    &.two-thirds 
      width 65%
    &.one-third
      width 30%
    &.one-fourth
      width 21.25%
    &.three-fourths
      widows 73.75%
    &.full-narrow
      margin-left 17.5% !important
      width 65%
    &.flow-opposite
      float right

.grid
  .row
    margin-top 1.5em
    &:first-child
      margin-top 0
  .column
    padding 2em
    font-size 1.2rem
    background-color #ccc

// -------------------------------------
//   Mast
// -------------------------------------

.mast
  padding .9375rem
  width 100%
  position fixed
  top 0
  background url(/assets/img/bg-ocean.jpg)
  z-index 100
  @media medium
    padding 1.25rem 1.875rem
    width 35%
    height 100%
    right 0

.logo
  max-width 9.375rem
  display block
  border none
  &:hover
    border none
  @media medium
    margin 1.875rem 0
    max-width 16.25rem
    opacity 0
    transition opacity .5s ease-in-out
    &.js-peekaboo
      opacity 1

.js-menu-trigger
  padding 10px
  display inline-block
  position absolute
  top 19px
  right 15px
  font 700 12px proxima-nova
  letter-spacing 0.05rem
  text-transform uppercase
  text-align right
  color white
  @media medium
    display none

.nav-primary,
.nav-secondary
  display none
  @media medium
    display block
    font-family proxima

.nav-primary
  @media medium
    margin-bottom 1.875rem
    a
      rem(36px)
      font-weight 900
      letter-spacing -.06rem
      color rgba(white,.75)
      transition all .3s ease-in-out
      &:hover
        color rgba(white,1)
      span
        display none
  @media all and (min-width:66.25em)
    a
      &:hover
        color rgba(white,1)
        span
          opacity 1
      span
        display inline
        color rgba(white,.25)
        opacity 0
        transition all .3s ease-in-out

.nav-secondary
  @media medium
    li
      margin-bottom .5rem
    a
      rem(24px)
      font-weight 700
      color rgba(white,.75)
      transition all .3s ease-in-out
      border-bottom 3px solid rgba(white,.75)
      &:hover
        color rgba(white,1)
        border-bottom 3px solid rgba(white,1)

.nav-smallscreen
  padding 5rem 3rem 0px
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  background rgba(black,.95)
  opacity 0
  transition opacity .5s ease-out, z-index 0s 1s
  li
    opacity 0
    transform translateY(100%)
    transition transform 0.25s ease-in, opacity 0.5s
    &:nth-child(1)
      transition-delay 0.09s
      transition-duration 0.15s
    a
      padding 0.7rem 0
      display block
      rem(22px)
      font-weight 900
      font-family proxima
      color rgba(white,.75)
      span
        color rgba(white,.25)
  .nav-work-together,
  .nav-coffee
    rem(20px)
    font-weight 700
  .nav-work-together
    margin-top 1.5rem
    padding-top 1.5rem
    width 100%
    display block
    border-top 1px solid rgba(255,255,255,.5)
  &.active
    opacity 1
    z-index 500
    li
      opacity 1
      transform translateY(0)
      transition transform 0.5s, opacity 0.4s
      &:nth-child(1)
        transition-delay 0.013s
        transition-duration 0.15s
  @media medium
    display none

// -------------------------------------
//   Main
// -------------------------------------

.main
  margin-top 5rem
  padding 1.25rem
  @media medium
    margin-top 0
    padding 3.125rem
    width 65%
    top 0

.hero
  margin-top 5rem
  padding 1.25rem
  .hero-logo
    display none
  .hero-title
    margin 0 0 2rem
    rem(29px)
    line-height 1.2
    letter-spacing -.06rem
  .hero-tagline
    font-family monospace
    rem(22px)
  @media medium
    margin-top 0
    padding 3.125rem
    width 65%
    top 0
    .hero-logo
      margin-bottom 1.875rem
      max-width 16.25rem
      display block
    .hero-title
      rem(40px)
  @media large
    .hero-title
      max-width 43.75rem
      rem(70px)
    .hero-tagline
      max-width 43.75rem

.pic-divider
  @media medium
    max-width 65%

.content
  margin-bottom .5rem
  padding 1.25rem
  @media medium
    margin-bottom 1rem
    padding 3.125rem
    width 65%
    max-width 50rem

.services
  margin 2.5rem 0 0
  padding 2.5rem 0
  border 1px solid rgba(brand-gray,.25)
  border-width 1px 0

.service-list
  ul
    margin 0
    padding 0
    list-style-type none
    font-family proxima-nova
    font-weight 700
  li
    margin-bottom .5rem
    line-height 1

.portfolio
  margin 2.5rem 0

.portfolio-item
  margin 0 0 10px 0;
  display inline-block
  border 10px solid rgba(white,.5)
  .portfolio-info
    display none
  @media medium
    margin 0 25px 20px 0;
    width 50%
    width -moz-calc(50% - 25px);
    width -o-calc(50% - 25px);
    width -webkit-calc(50% - 25px);
    width calc(50% - 25px);
    position relative
    &:hover
      border 10px solid white
      .portfolio-info
        padding 1rem
        background rgba(darken(brand-mint,20),.85)
        opacity 1
    .portfolio-info
      padding 10% 1rem 0
      width 100%
      height 100%
      display block
      position absolute
      left 0
      top 0
      overflow hidden
      color white
      opacity 0
      transition all .45s ease-out
      p
        position absolute
        bottom 1%
        rem(16px)
        font-family proxima-nova
        font-weight 900

.content-how
  h3
    margin-bottom 0

.team-member
  margin 0 10px 5px 0;
  width 45%
  width -moz-calc(50% - 10px);
  width -o-calc(50% - 10px);
  width -webkit-calc(50% - 10px);
  width calc(50% - 10px);
  position relative
  display inline-block
  border 10px solid rgba(brand-gray,.5)
  &:hover
    border 10px solid brand-gray
    .team-member-info
      padding 1rem
      opacity 1
  .team-member-info
    padding 10% 1rem 0
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    overflow hidden
    color white
    background rgba(darken(brand-red,20),.85)
    opacity 0
    transition all .45s ease-out
    h5
      margin-bottom 0
    p
      position absolute
      bottom 1%
      rem(16px)
      font-family proxima-nova
      font-weight 900

.form-success,
.form-fail
  display none

// -------------------------------------
//   Footer
// -------------------------------------

.footer
  height 75px
  background darken(brand-primary, 40%)