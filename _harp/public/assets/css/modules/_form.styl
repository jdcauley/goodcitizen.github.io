// -------------------------------------
//   Base
// -------------------------------------

.form-control-group
  margin 0
  padding .2rem 1rem 1rem
  width 100%
  height auto
  border 2px solid
  transition all 400ms
  + .form-control-group
    border-width 0 2px 2px

label
  font 700 12px proxima-nova
  letter-spacing 0.05rem
  text-transform uppercase
  color darken(brand-red, 40%)

input,
select,
textarea
  width 100%
  display block
  font 18px proxima-nova
  background transparent
  border none
  outline none

input[type="text"],
input[type="email"],
input[type="tel"]
  padding 0 0 .3rem
  border-bottom 1px solid rgba(black, .2)
  &.parsley-error
    border-bottom 1px solid brand-warning

.form-control-select
  padding 1rem
  .select-styled
    padding .5rem
    background url(/assets/img/icon-arrow-down.png) 97% 52%
    background-size 11px 6px
    background-repeat no-repeat
    border 0
    border-bottom 1px solid rgba(black, .2)
    border-radius 0
    -webkit-appearance none
    -moz-appearance none
    &.parsley-error
      border-bottom 1px solid brand-warning

.form-button
  padding 1rem
  width auto
  color white
  background base-color
  cursor pointer

input:focus::-webkit-input-placeholder
  opacity .2
input:focus:-moz-placeholder
  opacity .2
input:focus::-moz-placeholder
  opacity .2
input:focus:-ms-input-placeholder
  opacity .2

textarea:focus::-webkit-input-placeholder
  opacity .2
textarea:focus:-moz-placeholder
  opacity .2
textarea:focus::-moz-placeholder
  opacity .2
textarea:focus:-ms-input-placeholder
  opacity .2

.parsley-errors-list
  margin 5px 0
  padding 0
  list-style-type none
  li
    padding 10px
    font 700 12px proxima-nova
    letter-spacing 0.05rem
    text-transform uppercase
    color white
    background brand-warning
    &::before
      content '\2191'
      font-size 15px
      font-weight 700